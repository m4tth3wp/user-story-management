<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> </title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body class="light-green lighten-4">
  <%- include('../partials/nav') %>
  <div class="card-panel light-green lighten-4">
        <section class="story-index">
          <div class="row">
          <div class="col s12 .left-align"> 
            <h4><%=userLoggedIn%>, Here Are Your Stories:</h1>
          </div>
          </div>
          <% if(storyList.length === 0) { %>
            <h4> No Stories Yet...add something now!</h4>
            <% } else { %>
          <% storyList.forEach(p => { %>
              <div class="row">
                <div class="col s12 m8 l4">
                  <div class="card  light-green">
                    <div class="card-content white-text">
                      <span class="card-title"><%=p.title%></span>
                      <hr class="light-green darken-4">
                      <p><%=p.description %></p>
                      <br>
                      <br>
                      <p>Status: <%=p.status %></p>
                    </div>
                    <div class="card-action">
                      <a href="/stories/<%=p._id %>/edit"> <i class="material-icons">edit</i></a>
                      <form id="delete_form" action="/stories/<%=p._id%>?_method=DELETE" method="POST">
                        <a href="javascript:{}" onclick="document.getElementById('delete_form').submit();"> <i id="delete_btn" class="material-icons">delete</i></a>
                      </form>
                      
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
            <% } %>
        </section>
  </div>
</body>
</html>